generator client {
  provider = "prisma-client-js"
  output   = "./.client/"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum NodeStatus {
  ONLINE
  OFFLINE
  MAINTENANCE
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shards Shard[] @relation("UserShards")
}

model Node {
  id            String     @id @default(uuid())
  ip            String? // 8.8.8.8 aka an ip address
  fqdn          String? // node.example.com
  port          Int        @default(80)
  label         String // Costa Rica
  location      String? // cr-{i}
  authorization String // The key to access the node, the node also has to set this key
  ssl           Boolean    @default(false)
  status        NodeStatus @default(OFFLINE)

  shards Shard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shard {
  id   String @id @default(uuid())
  name String

  nodeId String
  Node   Node   @relation(fields: [nodeId], references: [id])

  users User[] @relation("UserShards")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
